<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
		x:Class="YearToTorahVerse.Views.SearchView"
		xmlns:verse="clr-namespace:YearToTorahVerse.Core"
        Title="Year to Torah Verse" MinHeight="200" MinWidth="200" Width="400" Height="300">
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="75.62"/>
    		<ColumnDefinition/>
    		<ColumnDefinition Width="114.339"/>
    	</Grid.ColumnDefinitions>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="13.058"/>
    		<RowDefinition Height="28.82"/>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
    	<Label Content="Jewish Year" Grid.Row="1"/>
    	<TextBox TextWrapping="Wrap" Text="{Binding JewishYear}" Grid.Column="1" Grid.Row="1" Margin="10,0"/>
    	<Button x:Name="Search" Content="Search" Grid.Column="2" Grid.Row="1"/>
    	<ListBox Grid.Row="2" Margin="10" Grid.ColumnSpan="3"
			ItemsSource="{Binding Path=Verses}"
			ItemTemplate="{DynamicResource VerseTemplate}"/>
    </Grid>
</Window>