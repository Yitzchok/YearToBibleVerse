<Window x:Class="YearToTorahVerse.Views.SearchView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        Title="Year to Torah Verse" MinHeight="300" MinWidth="300">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="0.099*"/>
    		<RowDefinition Height="0.061*"/>
    		<RowDefinition Height="0.84*"/>
    	</Grid.RowDefinitions>
    	<WrapPanel x:Name="wrapPanel" Grid.Row="1" Orientation="Vertical" ItemHeight="{Binding ActualHeight, ElementName=wrapPanel, Mode=Default}">
    		<Label Content="Jewish Year" Width="100"/>
    		<TextBox TextWrapping="Wrap" Width="200" Text="{Binding JewishYear}"/>
    		<Button x:Name="Search" Width="100" Content="Search"/>
    	</WrapPanel>
    	<ListBox Grid.Row="2" Margin="10"/>

    </Grid>
</Window>
